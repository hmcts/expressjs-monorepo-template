{
  "name": "Full Dev Environment (DIND)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "runArgs": ["--privileged"],
  "remoteUser": "vscode",

  "initializeCommand": "touch ~/.bash_history ~/.zsh_history",
  "mounts": [
    "source=${localEnv:HOME}/.bash_history,target=/home/vscode/.bash_history,type=bind",
    "source=${localEnv:HOME}/.zsh_history,target=/home/vscode/.zsh_history,type=bind"
  ],

  "features": {
    // Core isolation
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},

    // Common CLI tools
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "installNpmPackages": "yarn",
      "nvmInstallPath": "/usr/local/share/nvm"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "onWindowChange"
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-playwright.playwright"
      ]
    }
  }
}
