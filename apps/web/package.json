{
  "name": "@hmcts/web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "scripts": {
    "dev": "nodemon --watch src --watch '../../**/*' --ext ts,njk --exec tsx src/server.ts",
    "build": "tsc && vite build",
    "clean": "rm -rf dist",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@hmcts/cloud-native-platform": "workspace:*",
    "@hmcts/express-govuk-starter": "workspace:*",
    "@hmcts/postgres": "workspace:*",
    "compression": "1.8.1",
    "config": "4.1.1",
    "cookie-parser": "1.4.7",
    "express": "5.1.0",
    "express-session": "1.18.2",
    "govuk-frontend": "5.11.1",
    "helmet": "8.1.0",
    "nunjucks": "3.2.4"
  },
  "devDependencies": {
    "@types/compression": "1.8.1",
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "1.4.9",
    "@types/express": "5.0.3",
    "@types/express-session": "1.18.2",
    "@types/govuk-frontend": "^5.9.0",
    "@types/nunjucks": "3.2.6",
    "@types/supertest": "6.0.3",
    "nodemon": "3.1.10",
    "sass": "1.90.0",
    "supertest": "7.1.4",
    "vite": "7.1.3",
    "vite-plugin-static-copy": "^3.1.1"
  }
}
