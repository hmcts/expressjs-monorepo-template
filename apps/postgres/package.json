{
  "name": "@hmcts/postgres",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "yarn collate && tsc",
    "collate": "tsx src/collate-schema.ts",
    "generate": "yarn collate && prisma generate --no-hints",
    "migrate": "yarn collate && prisma migrate deploy",
    "migrate:dev": "yarn collate && prisma migrate dev",
    "migrate:reset": "yarn collate && prisma migrate reset",
    "studio": "yarn collate && prisma studio",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@hmcts/onboarding": "workspace:*",
    "@prisma/client": "6.17.0"
  },
  "devDependencies": {
    "glob": "11.0.3",
    "prisma": "6.17.0"
  }
}
