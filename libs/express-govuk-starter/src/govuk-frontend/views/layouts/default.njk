  <!-- End Dynatrace -->
{% endblock %}

{% block bodyStart %}
  <!-- Google Tag Manager (noscript) -->
  <!-- <noscript><iframe src="https://www.googletagmanager.com/ns.html?id={{ globals.gtm.containerId }}"
            height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript> -->
  <!-- End Google Tag Manager (noscript) -->
{% endblock %}

{% block pageTitle %}
  {% if title %} 
    {{ title }} - {{ serviceName }} - {{ govUk }}
  {% else %}
    {{ serviceName }} - {{ govUk }}
  {% endif %}
{% endblock %}

{% block header %}
  {{ govukHeader({
    serviceName: serviceName,
    serviceUrl: "/"
  }) }}
{% endblock %}

{% set bannerHtml %}
  {{ feedback.part1 }}<a class="govuk-link" aria-label="{{ feedback.ariaLabel }}" href="{{ feedback.link }}{{ pageUrl }}" target="_blank">{{ feedback.part2 }}</a>{{ feedback.part3 }}
  <a href="{{ languageToggle.link }}" class="govuk-link language">{{ languageToggle.text }}</a>
{% endset %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: phase
    },
    html: bannerHtml
  }) }}
  {% block backLink %}
    <a href="#" class="govuk-back-link">{{ back }}</a>
  {% endblock %}

{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% block error_summary %}
        {# Error summary would go here #}
      {% endblock %}

      {% block page_content %}
        {% if title %}
          <h1 class="govuk-heading-l">{{ title }}</h1>
        {% endif %}
      {% endblock %}

    </div>
  </div>
{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "/cookies",
          text: footer.cookies
        },
        {
          href: "/privacy-policy",
          text: footer.privacyPolicy
        },
        {
          href: "/accessibility-statement",
          text: footer.accessibility
        },
        {
          href: "/terms-and-conditions",
          text: footer.termsAndConditions
        },
        {
          href: "/contact-us",
          text: footer.contactUs
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  {% if isProduction %}
    <script src="{{ jsEntry }}"></script>
  {% else %}
    <script type="module" src="/@vite/client"></script>
    <script type="module" src="{{ jsEntry }}"></script>
  {% endif %}
{% endblock %}
