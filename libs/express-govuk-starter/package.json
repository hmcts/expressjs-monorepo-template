{
  "name": "@hmcts/express-govuk-starter",
  "version": "1.0.0",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "default": "./src/index.ts"
    },
    "./src/assets/vite-config.js": {
      "production": "./dist/assets/vite-config.js",
      "default": "./src/assets/vite-config.ts"
    }
  },
  "scripts": {
    "build": "tsc && cp -r src/govuk-frontend/views dist/govuk-frontend/ && cp -r src/cookies/views dist/cookies/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "peerDependencies": {
    "@hmcts/cookie-manager": "^1.1.0",
    "connect-redis": "^9.0.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.2.0",
    "helmet": "^8.0.0",
    "nunjucks": "^3.2.4",
    "pg": "^8.13.1",
    "pg-format": "^1.0.4",
    "sass": "^1.90.0",
    "vite": "^7.0.0",
    "vite-plugin-static-copy": "^3.1.0"
  },
  "peerDependenciesMeta": {
    "connect-redis": {
      "optional": true
    },
    "express-session": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "pg-format": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "5.0.5",
    "@types/express-session": "1.18.2",
    "@types/nunjucks": "3.2.6",
    "@types/pg": "8.15.5",
    "@types/pg-format": "1.0.5",
    "connect-redis": "9.0.0",
    "express-session": "1.18.2",
    "pg": "8.16.3",
    "pg-format": "1.0.4"
  }
}
