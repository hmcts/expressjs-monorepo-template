{
  "name": "expressjs-monorepo-template",
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "e2e-tests",
    "libs/*"
  ],
  "scripts": {
    "test": "turbo test",
    "test:coverage": "turbo test -- --coverage",
    "test:changed": "turbo test --filter='...[HEAD^1]'",
    "test:e2e": "yarn workspace e2e-tests run test:e2e",
    "format": "turbo format",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:fix-changed": "turbo lint:fix --filter='...[HEAD^1]'",
    "lint:changed": "turbo lint --filter='...[HEAD^1]'",
    "build": "turbo build",
    "build:force": "turbo build --force",
    "clean": "find . -name '*.tsbuildinfo' -delete && find apps libs -name 'dist' -type d -prune -exec rm -rf {} +",
    "start:api": "yarn workspace @hmcts/api run dev",
    "start:web": "yarn workspace @hmcts/web run dev",
    "start:db": "yarn workspace @hmcts/postgres run dev",
    "dev": "yarn workspace @hmcts/postgres run generate && concurrently \"yarn:start:*\""
  },
  "keywords": [],
  "author": "HMCTS",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "24.3.0",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "concurrently": "9.2.0",
    "supertest": "7.1.4",
    "tsx": "^4.20.4",
    "turbo": "2.5.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "packageManager": "yarn@4.9.2"
}
