{
    "hooks": {
      "PreToolUse": [
        {
          "matcher": "Bash",
          "hooks": [{ "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pre-bash.sh" }]
        },
        {
          "matcher": "Edit|Write|MultiEdit|Read|Glob|Grep|Bash",
          "hooks": [{ "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/tool_analytics_hook.js" }]
        }
      ],
      "PostToolUse": [
        {
          "matcher": "Edit|Write|MultiEdit",
          "hooks": [{ "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-write.sh" }]
        },
        {
          "matcher": "Edit|Write|MultiEdit|Read|Glob|Grep",
          "hooks": [{ "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/tool_analytics_hook.js" }]
        }
      ],
      "UserPromptSubmit": [
        {
          "matcher": ".*",
          "hooks": [{ "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/tool_analytics_hook.js" }]
        }
      ],
      "Stop": [
        {
          "matcher": ".*",
          "hooks": [{ "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/tool_analytics_hook.js" }]
        }
      ]
    }
  }